{
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./dist",
        "outDir": "./dist"
    },
    "include": ["src/**/*", "webpack.config.ts"]
}
